<p id="notice"><%= notice %></p>

<h2 class="request_title"><%= @request.title %></h2>
<p class="request_sub_title"><%= @request.description %><br>
 <%= @request.due_date.strftime("%A, %B %d") %></p>

<div id="samples_wrapper">
	<%= render @request.samples %>
	<div id="form">
		<%= render "samples/form" %>
	</div>
</div>

<div class="links">
	<%= link_to 'Edit', edit_request_path(@request) %> |
	<%= link_to 'Delete', request_path(@request), method: :delete, data: { confirm: "Are you sure?" }%> |
    <%= link_to 'Back', requests_path %>
</div>