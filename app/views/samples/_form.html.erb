<%= form_for([@request, @request.samples.build]) do |f| %>
  <%= f.text_field :tank,  placeholder: "New Tank" %>
  <%= f.text_field :lot_id,  placeholder: "Lot ID" %>
  <%= f.submit "Add Sample" %>
<% end %>

<%= form_tag import_request_samples_path(@request), multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>