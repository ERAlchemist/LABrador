<%= week_calendar events: @recurrences do |day, recurrences| %>
    <div><strong><%= day.to_s(:long) %></strong></div>
    <% recurrences.each do |recurrence| %> 
    <div>
        <%= link_to recurrence.title, recurrence %>
    </div>
    <% end %> 
<% end %> 


<table class ="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start time</th>
      <th>Recurring</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recurrences.each do |recurrence| %>
      <tr>
        <td><%= recurrence.title %></td>
        <td><%= recurrence.description %></td>
        <td><%= recurrence.start_time %></td>
        <td><%= recurrence.recurring %></td>
        <td><%= link_to 'Show', recurrence %></td>
        <td><%= link_to 'Edit', edit_recurrence_path(recurrence) %></td>
        <td><%= link_to 'Destroy', recurrence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="links"> |
     <%= link_to 'New Recurrence', new_recurrence_path %> |
</div>
